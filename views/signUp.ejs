<section style="display: flex; flex-direction: column; justify-content: center; padding:300px">
  <form action="signup" method="post" style="display: flex; flex-direction: column; justify-content: center;">
    <label for="name">Nombre</label>
    <input type="text" name="name" placeholder="Ingrese su nombre" id="name" required>
    <label for="email">e-mail</label>
    <input type="email" name="email" placeholder="Ingrese su e-mail" id="email" required>
    <label for="password">Contraseña</label>
    <input type="password" name="password" placeholder="Ingrese su contraseña" id="password" required>
    <button type="submit">Agregar usuario</button>
    <a href="loginView">Already have an account</a> 
  </form>
</section>